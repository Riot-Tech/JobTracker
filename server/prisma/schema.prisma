// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  name          String
  email         String @unique
  password      String
  profilePicture String?
  enabled       Boolean @default(true)
  files         Link[]
  applications  Application[]
  spontaneous   Spontaneous[]
}

enum jobType {
  FULLTIME
  PART_TIME
  FREELANCE
  UNSPECIFIED
}

enum jobModality {
  REMOTE
  ONSITE
  HYBRID
  UNSPECIFIED
}

enum status {
  PENDING
  SUBMITTED
  INTERVIEW_SCHEDULED
  HIRED
  REJECTED
}

model Application {
  id              Int @id @default(autoincrement())
  user            User @relation(fields: [userId], references: [id])
  userId          Int
  jobName         String
  company         String 
  jobType         jobType @default(UNSPECIFIED)
  jobModality     jobModality @default(UNSPECIFIED)
  location        String?
  date            DateTime @default(now())
  expectedIncome  Int?
  currency        String?
  status          status @default(PENDING)
  feedback        String?
  comments        String?
  enabled         Boolean @default(true)
  links           Link[]
}

model Spontaneous {
  id              Int @id @default(autoincrement())
  user            User @relation(fields: [userId], references: [id])
  userId          Int
  message         String
  receiver        String?
  company         String?
  location        String?
  feedback        String?
  date            DateTime @default(now())
  enabled         Boolean @default(true)
  links           Link[]
}

model Link {
  id              Int @id @default(autoincrement())
  user            User? @relation(fields: [userId], references: [id])
  userId          Int?
  application     Application? @relation(fields: [appId], references: [id])
  appId           Int?
  spontaneous     Spontaneous? @relation(fields: [spontId], references: [id])
  spontId         Int?
  name            String?
  url             String
  enabled         Boolean @default(true)
  isCv            Boolean @default(false)
}